  <script>
    // UNSICHER: Client-side "Login" (nur UI)
    // TODO: Für echten Schutz: Netlify Identity / Firebase etc.
    const PASSWORD = "FFC2024"; // <-- ändern

    const loginBox = document.getElementById('loginBox');
    const memberArea = document.getElementById('memberArea');
    const err = document.getElementById('err');

    function setLoggedIn(on){
      if(on){
        localStorage.setItem('kffc_logged_in', '1');
        loginBox.classList.add('hidden');
        memberArea.classList.remove('hidden');
      }else{
        localStorage.removeItem('kffc_logged_in');
        memberArea.classList.add('hidden');
        loginBox.classList.remove('hidden');
      }
    }

    document.getElementById('loginBtn').addEventListener('click', () => {
      const pw = document.getElementById('pw').value || '';
      if(pw === PASSWORD){
        err.classList.add('hidden');
        setLoggedIn(true);
      }else{
        err.classList.remove('hidden');
      }
    });

    document.getElementById('logoutBtn').addEventListener('click', () => setLoggedIn(false));

    // Auto-login if previously set (again: not secure)
    if(localStorage.getItem('kffc_logged_in') === '1') setLoggedIn(true);
  </script>
